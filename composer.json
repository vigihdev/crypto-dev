{
    "name": "vigihdev/crypto-dev",
    "version": "1.0.0",
    "description": "Vigih dev crypto",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Vigih Dev",
            "email": "vigihdev@gmail.com",
            "role": "developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "defuse/php-encryption": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "10.5.x-dev"
    },
    "autoload": {
        "psr-4": {
            "Vigihdev\\CryptoDev\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0
    },
    "scripts": {
        "defuse:generate:key": "Vigihdev\\CryptoDev\\Console\\CryptoDefuseConsole::generateKey",
        "defuse:write:env": "Vigihdev\\CryptoDev\\Console\\CryptoDefuseConsole::writeEnvEncrypt",
        "defuse:test": "Vigihdev\\CryptoDev\\Console\\CryptoDefuseConsole::testDecrypt",
        "openssl:generate:key": "Vigihdev\\CryptoDev\\Console\\CryptoOpensslConsole::generateKey",
        "openssl:write:env": "Vigihdev\\CryptoDev\\Console\\CryptoOpensslConsole::writeEnvEncrypt",
        "openssl:test": "Vigihdev\\CryptoDev\\Console\\CryptoOpensslConsole::testDecrypt",
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "server": "php -S localhost:3922 server.php"
    }
}