{
    "name": "vigihdev/crypto-dev",
    "version": "1.0.0",
    "description": "Vigih dev crypto",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Vigih Dev",
            "email": "vigihdev@gmail.com",
            "role": "developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "defuse/php-encryption": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "Vigihdev\\CryptoDev\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0
    },
    "bin": [
        "bin/crypto-dev"
    ],
    "scripts": {
        "generate:key": "Vigihdev\\CryptoDev\\Generator::cliKey",
        "generate:env": "Vigihdev\\CryptoDev\\Generator::cliEnv",
        "server": "php -S localhost:3922 server.php"
    }
}